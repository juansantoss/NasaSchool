@model StudentModel
@{
    ViewData["Title"] = "Confirm student deletion";
}
<div class="text-center">
    <h3>Do you really want to delete the student (@Model.FullName)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-controller="Student" asp-action="Index" role="button">Cancel deletion</a>
<a class="btn btn-danger btn-block" asp-controller="Student" asp-action="Delete" asp-route-id="@Model.Id" role="button">Confirm deletion</a>